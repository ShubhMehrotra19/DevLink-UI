generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  username    String  @unique
  firstName   String
  lastName    String
  description String?

  email String @unique

  avatar String?
  image  String

  github    String
  linkedin  String?
  twitter   String?
  portfolio String?

  hashtags String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
